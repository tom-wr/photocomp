{%  extends "base.html.twig" %}

{% block body %}
    <div class="row justify-content-center top-padder">
        <div class="col-md-offset-4 col-md-4">

            <h1>Submit Photo</h1>

            {% if user.errors is not empty %}
                <p>Errors</p>
                <ul>
                    {% for error in user.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <form id="form-submit" method="post" action="/photos/create" enctype="multipart/form-data" >
                <!-- Name of input element determines name in $_FILES array -->
                <div class="form-group">
                    <label for="file-photo">Caption: </label>
                    Upload: <input name="photo" id="file-photo" type="file" accept=".png,.jpg,.jpeg" />
                </div>
                <div class="form-group">
                    <label for="caption">Caption: </label>
                    <textarea class="form-control" type="text-area" id=caption name="caption"></textarea>
                </div>
                <input type="submit" value="Submit" />

            </form>
            <div id="upload-progress" class="progress">
                <div id="upload-progress-bar" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/vendor/dropzone.css">
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>
    <script src="/js/vendor/dropzone.js"></script>
    <script src="/js/form.js"></script>
    <script>
    </script>
{% endblock %}
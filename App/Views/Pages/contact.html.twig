{%  extends "base.html.twig" %}

{% block body %}



    <div class="row justify-content-center top-padder">
        <div class="col-md-4">

            {% if errors is not empty %}
                <div class="alert alert-warning">
                    <p>Errors</p>
                    <ul>
                        {% for error in errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <h1>Contact Us</h1>
            <form id="form-contact" method="post" action="/contact/send">
                <div class="form-group">
                    <label for="inputName">Name</label>
                    <input id="inputName" class="form-control" name="name" placeholder="name" value="{{ name }}"/>
                </div>
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input id="inputEmail" class="form-control" name="email" placeholder="email" value="{{ email }}" required/>
                </div>
                <div class="form-group">
                    <label for="inputPhone">Phone Number</label>
                    <input id="inputPhone" class="form-control" name="phone" placeholder="phone number" value="{{ phone }}"/>
                </div>
                <div class="form-group">
                    <label for="inputMessage">Message</label>
                    <textarea id="inputMessage" class="form-control" name="message" placeholder="Message" value="{{ message }}" required></textarea>
                </div>
                <div class="g-recaptcha" data-sitekey="6Lfj-zkUAAAAAGfgkfpZlCvzPHG9s2eQ8ZDy2LvS"></div>
                <button type="submit" name="submit" class="pull-right btn btn-primary">Send</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/js/form.js"
{% endblock %}